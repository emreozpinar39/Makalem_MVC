@model User
@{
    ViewData["Title"] = "Login";
    Layout = null;
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.2.6/semantic.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
}

<header>
        <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: #204E5F; margin-top: 20px;">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Makalem_MVC</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" 
                    aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarColor01">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item active" style="padding-left:5px">
                            <a class="btn btn-outline-info" asp-area="" asp-controller="Home" asp-action="Index">Ana Sayfa</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
</header>

<div class="container">
    <div style="margin-left:30%;margin-top:100px;margin-right:30%">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
          <div class="ui stacked segment form-group" style="width:70%">
            <div class="form-group field" style="margin:15px;padding-top:20px">
                <div class="ui icon input" style="width:100%">
                    <input asp-for="Email" type="text" placeholder="Email" class="form-control" />

                </div>
                <p><span asp-validation-for="Email" class="text-danger"></span></p>
            </div>
            


            <div class="form-group field"  style="margin:15px">
                <div class="ui icon input" style="width:100%">
                    <input asp-for="Password" type="password" id="password" placeholder="Şifre" class="form-control" />
                    <i class="circular eye link icon" onclick="togglePassword()"></i>
                </div>
                <p><span asp-validation-for="Password" class="text-danger"></span></p>
            </div>

            



            <div class="form-group field"  style="margin:15px">
                <div class="ui" >
                    <input type="submit" value="Login" class="btn btn-primary" style="width:100%"/>
                </div>
            </div>

          </div>
          
            @if (TempData["Message"]!=null)
            {
            <div style="margin-top:15px" class="alert alert-danger" role="alert">
                @TempData["Message"]
            </div>
            }

        </form>
        
    </div>
</div>



    <script>
        function togglePassword() {
            var element = document.getElementById('password');
            element.type = (element.type == 'password' ? 'text' : 'password');
        }
    </script>

